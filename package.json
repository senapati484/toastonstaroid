{
  "name": "toastonstaroid",
  "version": "2.0.5",
  "description": "A simple and beautiful toast notification library for React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --external react",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --external react --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "toast",
    "notification",
    "alert",
    "gsap",
    "animation"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@swc/core": "^1.13.0",
    "gsap": "^3.13.0",
    "path-is-inside": "^1.0.2",
    "react": ">=16.8.0",
    "react-icons": "^5.5.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
